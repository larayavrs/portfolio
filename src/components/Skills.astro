---
import {
  BACKEND_TECH,
  DATABASE_TECH,
  FRONTEND_TECH,
  PROGRAMMING_LANGUAGES,
  TOOL_TECH,
} from "@/constants/tech-stack";

const SECTIONS = [
  { label: "Backend", items: BACKEND_TECH },
  { label: "Frontend", items: FRONTEND_TECH },
  { label: "Manejo de datos", items: DATABASE_TECH },
  { label: "Herramientas", items: TOOL_TECH },
  { label: "Lenguajes", items: PROGRAMMING_LANGUAGES },
];
---

<section class="my-8">
  <h2 class="mb-6 text-xl font-medium text-neutral-700 dark:text-neutral-300">
    Habilidades
  </h2>

  <div class="space-y-8">
    {
      SECTIONS.map(({ label, items }) => (
        <div class="grid gap-4 sm:grid-cols-[140px_1fr]">
          <h3 class="text-sm font-medium tracking-wide text-neutral-500 dark:text-neutral-400">
            {label}
          </h3>

          <div class="flex flex-wrap gap-2">
            {items.map((tech) => (
              <div class="group bg-background/60 flex items-center gap-2 rounded-md border px-2.5 py-1.5 font-mono text-xs text-neutral-700 transition hover:border-neutral-400 hover:bg-neutral-50 dark:text-neutral-300 dark:hover:bg-neutral-900">
                {tech.icon && (
                  <span class="flex size-4 items-center justify-center text-neutral-500 transition group-hover:text-neutral-700 dark:group-hover:text-neutral-200">
                    <tech.icon className="size-4" />
                  </span>
                )}

                <span class="whitespace-nowrap">{tech.label}</span>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>

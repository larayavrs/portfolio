---
import { TECH_STACK } from "@/constants/tech-stack";
---

<div
  class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-3"
  style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
>
  {
    TECH_STACK.map((item) => (
      <div class="flex h-10 min-w-[120px] items-center justify-center gap-2 rounded-md border border-solid bg-blue-50/10 p-2 text-center transition-all duration-200">
        {item.icon && <item.icon className="size-5" />}
        <span class="truncate font-mono text-xs">{item.title}</span>
      </div>
    ))
  }
</div>
